---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

interface Props {
  author: CollectionEntry<"author">;
}

const { author } = Astro.props;
---

<div class="max-w-lg mx-auto my-10 bg-white rounded-lg shadow-md p-5">
  <Image
    class="w-20 h-20 rounded-full mx-auto"
    src="https://picsum.photos/200"
    alt="Profile picture"
    src={author.data.avatar}
  />
  <h2 class="text-center text-2xl font-semibold mt-3">{author.data.name}</h2>
  <p class="text-center text-gray-600 mt-1">{author.data.subtitle}</p>
  <div class="flex justify-center mt-5">
    <a href={author.data.twitter} class="text-blue-500 hover:text-blue-700 mx-3"
      >Twitter</a
    >
    <a href={author.data.linkedIn}class="text-blue-500 hover:text-blue-700 mx-3"
      >Linkedin</a
    >
    <a href={author.data.github} class="text-blue-500 hover:text-blue-700 mx-3"
      >Github</a
    >
  </div>
  <div class="mt-5">
    <h3 class="text-xl font-semibold">Bio</h3>
    <p class="text-gray-600 mt-2">
      {author.data.bio}
    </p>
    <div class="flex justify-end">
      <a href={`/blog/${author.id}`}>Leer m√°s</a>
    </div>
  </div>
</div>
