---
import { Formatter } from "@utils/formatter";

// al componente le pase un post como parametro y aqui destructuro la prop de Astro.props ques un post
// y extraigo frontmatter y url que vienen de los post que traje con glob()
const { frontmatter, url } = Astro.props;
---

<div class="lg:flex">
  <img
    class="object-cover w-full h-56 rounded-lg lg:w-64"
    src={frontmatter.image}
    alt={frontmatter.title}
  />

  <div class="flex flex-col justify-between py-6 lg:mx-6">
    <a href={url} class="text-xl font-semiboldhover:underline text-white">
      {frontmatter.description}
    </a>

    <span class="text-sm text-gray-300"
      >{Formatter.formatDate(frontmatter.date)}</span
    >
  </div>
</div>
